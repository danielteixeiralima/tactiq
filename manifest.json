{
  "manifest_version": 3,
  "name": "Google Meet Caption Extractor",
  "version": "1.0",
  "description": "Extrai legendas e nomes dos locutores do Google Meet e exibe no console.",
  "permissions": ["scripting", "activeTab"],
  "host_permissions": ["https://meet.google.com/*"],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://meet.google.com/*"],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ]
}
